README

Install

Install Node Api Server

docker run -it -v /home/eneko/workspace/kubide/server-api:/server-api node:0.12 /bin/bash

npm install


Install MongoDB

docker-compose up

docker exec -it mongodb mongo

mongo
use admin
db.system.users.remove({})
db.system.version.remove({})
db.system.version.insert({ "_id" : "authSchema", "currentVersion" : 3 })

//restart server

Ctrl+c

docker-compose up

docker exec -it mongodb mongo

mongo

use restdb

db.notes.insert({text:'hello kubide'});

db.createUser( {
    "user" : "mongo",
    "pwd" : "mongo",
    "roles": [
        { "role": "readWrite", "db": "restdb" }
    ]
});


Ctrl+c


docker-compose up


192.168.99.100 rest-api.dev

rest-api.dev:7000/api
